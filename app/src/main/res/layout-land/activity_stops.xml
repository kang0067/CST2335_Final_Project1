<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ListView
        android:id="@+id/buslistview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/routetext" />

    <Button
        android:id="@+id/selectstop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buslistview"
        android:layout_toEndOf="@+id/routetext"
        android:text="Select" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/selectstop"
        app:srcCompat="@drawable/bus" />

    <EditText
        android:id="@+id/routetext"
        android:layout_width="100dp"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="#" />
    <FrameLayout
        android:id="@+id/tabletframeLayout"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        />

</RelativeLayout>